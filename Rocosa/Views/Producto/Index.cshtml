@model IEnumerable<Rocosa.Models.Producto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus"></i></i> Nuevo Producto</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" style="width:100%">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Tip. Aplicación</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.NombreProducto</th>
                        <th>@item.Precio</th>
                        <th>@item.Categoria.NombreCategoria</th>
                        <th>@item.TipoAplicacion.Nombre</th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                @* Upsert => Significa Update e Insert se va usar un mismo método para esta acción, cuando se envia el Id es una actualización y cuando no se envia el Id es una creación*@
                                <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i></a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros de Productos</p>
    }
</div>

